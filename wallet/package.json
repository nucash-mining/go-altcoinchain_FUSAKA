{
  "name": "altcoinchain-wallet",
  "version": "1.0.0",
  "description": "Altcoinchain Desktop Wallet - Hybrid PoW/PoS",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-linux": "electron-builder --linux",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac"
  },
  "author": "Altcoinchain",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "ethers": "^6.9.0"
  },
  "build": {
    "appId": "com.altcoinchain.wallet",
    "productName": "Altcoinchain Wallet",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "assets/**/*"
    ],
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Finance",
      "icon": "assets/icon.png"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "assets/icon.icns"
    }
  }
}
